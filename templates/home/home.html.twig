<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
    <title>Country List</title>
    <script src="{{ asset('assets/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('assets/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('assets/bootstrap/dist/css/bootstrap.min.css') }}" >
    <link rel="stylesheet" href="{{ asset('assets/css/main.css') }}" >
</head>
<body>
    <div class="content">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-success" role="alert">Country List
                            {% if countries|length > 0 %}
                                <a class="btn btn-primary download-csv" href="/download_csv">Download CSV</a>
                            {% else %}
                                <a class="btn btn-primary load-table" href="javascript:void(0)">Load Table</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Country Name</th>
                                    <th>Country Code</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for c in countries %}
                                    <tr>
                                        <td>
                                            {{ c.name }}
                                        </td>
                                        <td>
                                            {{ c.code }}
                                        </td>
                                    </tr>
                                {% endfor %}

                                {% if countries|length == 0 %}
                                    <tr><td colspan="2" style="text-align: center;">No country found. Try clicking the button "Load Table", just above.</td></tr>
                                {% endif %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="loading">
        <img src="{{ asset('assets/img/loading.gif') }}" />
    </div>
    <script src="{{ asset('assets/js/main.js') }}"></script>
</body>
</html>